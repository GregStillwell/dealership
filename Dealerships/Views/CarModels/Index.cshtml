@{
  Layout = "_Layout";
}

@using Dealerships.Models;

<h1>Car Makes</h1>

@if (@Model.Count == 0)
{
  <h3>No car makers have been added yet!</h3>
}
else
{
  <ul>
  @foreach (CarModels carModel in Model)
    {
      <li>@Html.ActionLink($"{carModel.Name}", "Details", new { id = carModel.CarModelId }) | @carModel.Makes.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new model", "Create")</p>